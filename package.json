{
    "name": "my-package",
    "author": "Testing Github Dinesh",
    "version": "0.10.0",
    "main": "index.js",
    "devDependencies": {
        "@release-it/bumper": "3.0.1",
        "auto-changelog": "2.4.0",
        "release-it": "14.12.3"
    },
    "scripts": {
        "release": "release-it"
    },
    "release-it": {
        "npm": {
            "publish": false
        },
        "github": {
            "release": true
        },
        "git": {
            "changelog": "npx auto-changelog --stdout --commit-limit false --unreleased --template .github/workflows/templates/compact.hbs",
            "requireCommits": true,
            "tagName": "dinesh-test-${version}",
            "tagMatch": "dinesh-test-[0-9][0-9].[0-1][0-9].[0-9]*",
            "commitMessage": "test: release v${version}",
            "pushArgs": [
                "--follow-tags",
                "--force"
            ],
            "push": true
        },
        "hooks": {
            "after:bump": "npx auto-changelog -p"
        }
    }
}
